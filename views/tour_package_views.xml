<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue liste pour tour packages -->
        <record id="view_tour_package_tree" model="ir.ui.view">
            <field name="name">tour.package.tree</field>
            <field name="model">tour.package</field>
            <field name="arch" type="xml">
                <tree string="Forfaits Touristiques">
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="package_type"/>
                    <field name="tour_type"/>
                    <field name="total_days"/>
                    <field name="total_nights"/>
                    <field name="price_per_person" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="season"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Vue formulaire pour tour packages -->
        <record id="view_tour_package_form" model="ir.ui.view">
            <field name="name">tour.package.form</field>
            <field name="model">tour.package</field>
            <field name="arch" type="xml">
                <form string="Forfait Touristique">
                    <header>
                        <button name="action_book" string="Book" type="object" class="btn-primary" 
                                attrs="{'invisible': [('active', '=', False)]}"/>
                        <field name="active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom du forfait..."/>
                            </h1>
                            <div class="o_row">
                                <field name="sequence" readonly="1" class="oe_inline"/>
                            </div>
                        </div>
                        <group>
                            <field name="package_type" widget="radio" options="{'horizontal': true}"/>
                        </group>
                        <group>
                            <group>
                                <field name="location_ids" widget="many2many_tags" 
                                       options="{'no_create_edit': True}"/>
                                <field name="tour_type"/>
                                <field name="total_days"/>
                                <field name="total_nights"/>
                            </group>
                            <group>
                                <field name="price_per_person" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="season"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Days">
                                <field name="itinerary_ids" nolabel="1">
                                    <tree>
                                        <field name="name" string="Days"/>
                                        <field name="hotel_id" string="Hotels"/>
                                        <field name="places_covered" string="Places Covered"/>
                                    </tree>
                                    <form string="Create Days">
                                        <sheet>
                                            <group>
                                                <field name="name" string="Days" required="1" placeholder="Titre du jour..."/>
                                            </group>
                                            <group>
                                                <field name="location_id" string="Location"/>
                                                <field name="hotel_id" string="Hotels"/>
                                                <field name="night" string="Night"/>
                                            </group>
                                            <group>
                                                <field name="places_covered" string="Places Covered" placeholder="Lieux visités..."/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Équipements">
                                <field name="facility_ids" nolabel="1">
                                    <tree>
                                        <field name="name" string="Titre"/>
                                        <field name="description" string="Description"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <field name="company_id" invisible="1"/>
                        <field name="currency_id" invisible="1"/>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Vue recherche pour tour packages -->
        <record id="view_tour_package_search" model="ir.ui.view">
            <field name="name">tour.package.search</field>
            <field name="model">tour.package</field>
            <field name="arch" type="xml">
                <search string="Rechercher un forfait touristique">
                    <field name="name" string="Nom"/>
                    <field name="sequence" string="Référence"/>
                    <field name="location_ids" string="Destinations"/>
                    <filter string="Actifs" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactifs" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Flexi Package" name="flexi" domain="[('package_type', '=', 'flexi')]"/>
                    <filter string="Group Package" name="group" domain="[('package_type', '=', 'group')]"/>
                    <filter string="Domestic" name="domestic" domain="[('tour_type', '=', 'domestic')]"/>
                    <filter string="International" name="international" domain="[('tour_type', '=', 'international')]"/>
                    <group expand="0" string="Grouper par">
                        <filter string="Type de forfait" name="group_package_type" context="{'group_by': 'package_type'}"/>
                        <filter string="Type de voyage" name="group_tour_type" context="{'group_by': 'tour_type'}"/>
                        <filter string="Saison" name="group_season" context="{'group_by': 'season'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action pour tour packages -->
        <record id="action_tour_package" model="ir.actions.act_window">
            <field name="name">Forfaits Touristiques</field>
            <field name="res_model">tour.package</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre premier forfait touristique !
                </p>
                <p>
                    Les forfaits touristiques contiennent les informations 
                    des packages et forfaits disponibles.
                </p>
            </field>
        </record>

        <!-- Menu pour tour packages -->
        <menuitem id="menu_tour_package"
                  name="Forfaits Touristiques"
                  parent="menu_agence_voyage_root"
                  action="action_tour_package"
                  sequence="40"/>
    </data>
</odoo>