<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_purchase_form" model="ir.ui.view">
            <field name="name">travel.purchase.form</field>
            <field name="model">travel.purchase</field>
            <field name="arch" type="xml">
                <form string="Achat" create="1" edit="1" delete="1">
                    <header>
                        <button name="action_create_vendor_bill" string="Créer Facture Fournisseur" type="object" class="btn-primary"
                                attrs="{'invisible': ['|', ('state', '!=', 'confirmed'), ('vendor_bill_id', '!=', False)]}"
                                icon="fa-file-text-o"/>
                        <button name="action_confirm" string="Confirmer" type="object" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"
                                icon="fa-check"/>
                        <button name="action_cancel" string="Annuler" type="object"
                                attrs="{'invisible': [('state', 'in', ['cancelled', 'done'])]}"
                                icon="fa-times"/>
                        <button name="action_draft" string="Remettre en Brouillon" type="object"
                                attrs="{'invisible': [('state', '!=', 'cancelled')]}"
                                icon="fa-undo"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_vendor_bill" type="object" class="oe_stat_button" icon="fa-file-text-o"
                                    attrs="{'invisible': [('vendor_bill_id', '=', False)]}">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Facture</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Informations Fournisseur">
                                <field name="vendor_id" options="{'no_create': False, 'no_create_edit': False}"/>
                                <field name="vendor_email" invisible="1"/>
                                <field name="vendor_phone" invisible="1"/>
                                <field name="responsible_id" widget="many2one_avatar_user"/>
                            </group>
                            <group string="Dates">
                                <field name="date_purchase"/>
                                <field name="purchase_date"/>
                            </group>
                        </group>
                        <group>
                            <group string="Montants">
                                <field name="amount_untaxed" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                <field name="discount_percentage"/>
                                <field name="tax_amount" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}" 
                                       readonly="1" class="oe_subtotal_footer_separator"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Lignes d'Achat" icon="fa-list">
                                <field name="purchase_line_ids">
                                    <tree editable="bottom" create="1" delete="1">
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_name" required="1"/>
                                        <field name="description"/>
                                        <field name="quantity" required="1"/>
                                        <field name="unit_price" widget="monetary" options="{'currency_field': 'currency_id'}" required="1"/>
                                        <field name="subtotal" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes" icon="fa-file-text">
                                <field name="notes" placeholder="Notes sur cet achat..." nolabel="1"/>
                            </page>
                        </notebook>
                        
                        <field name="company_id" invisible="1"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="vendor_bill_id" invisible="1"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_purchase_tree" model="ir.ui.view">
            <field name="name">travel.purchase.tree</field>
            <field name="model">travel.purchase</field>
            <field name="arch" type="xml">
                <tree string="Achats" 
                      decoration-success="state=='done'" 
                      decoration-muted="state=='cancelled'"
                      decoration-info="state=='confirmed'"
                      create="1" edit="1" delete="1">
                    <field name="name"/>
                    <field name="vendor_id"/>
                    <field name="date_purchase"/>
                    <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total"/>
                    <field name="state" widget="badge" 
                           decoration-info="state=='draft'"
                           decoration-success="state=='confirmed'"
                           decoration-muted="state=='cancelled'"/>
                    <field name="bill_status" widget="badge"/>
                    <field name="company_id" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_purchase_search" model="ir.ui.view">
            <field name="name">travel.purchase.search</field>
            <field name="model">travel.purchase</field>
            <field name="arch" type="xml">
                <search string="Rechercher Achats">
                    <field name="name"/>
                    <field name="vendor_id"/>
                    <field name="date_purchase"/>
                    <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmé" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Terminé" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="Aujourd'hui" name="today" domain="[('date_purchase', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter string="Ce Mois" name="this_month" domain="[('date_purchase', '>=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
                    <separator/>
                    <filter string="Sans Facture" name="no_bill" domain="[('vendor_bill_id', '=', False)]"/>
                    <group expand="0" string="Grouper par">
                        <filter string="Fournisseur" name="group_vendor" context="{'group_by': 'vendor_id'}"/>
                        <filter string="Statut" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'date_purchase'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_purchase" model="ir.actions.act_window">
            <field name="name">Achats</field>
            <field name="res_model">travel.purchase</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre premier achat !
                </p>
                <p>
                    Les achats permettent de gérer les commandes auprès des fournisseurs
                    et de créer les factures d'achat correspondantes.
                </p>
            </field>
        </record>
    </data>
</odoo>
